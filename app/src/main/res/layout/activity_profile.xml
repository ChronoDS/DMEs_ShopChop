<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.danie.dmes_shopchop.ProfileActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ProfileScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/btnProfilePic"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:onClick="onTouch"
                android:scaleType="centerCrop"
                android:src="@drawable/photo"
                app:sriv_border_color="#FFCC00"
                app:sriv_border_width="2dp"
                app:sriv_oval="true" />

            <TextView
                android:id="@+id/pName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:hint="Israel Israeli"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+972 54-483-0849"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="israel.il@example.com"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/testTag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Test: "
                android:textAlignment="center"
                android:textSize="20dp"/>
            />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>